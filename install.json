{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./source/Chart.js"
      }
    ],
    "body": [
      {
        "type": "style",
        "src": "./source/app.css"
      },
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Widget Location",
        "order": 0,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "currency": {
        "title": "Currency",
        "type": "string",
        "default": "usd",
        "enum": ["usd", "gbp", "eur", "inr", "cny"],
        "enumNames": {
          "usd": "USD",
          "gbp": "GBP",
          "eur": "EUR",
          "inr": "INR",
          "cny": "CNY"
        }
      },
      "textColor": {
        "default": "#FFFFFF",
        "format": "color",
        "title": "Text Color",
        "type": "string"
      },
      "backgroundColor": {
        "default": "#2B3035",
        "format": "color",
        "title": "Background Color",
        "type": "string"
      },
      "graphColor": {
        "default": "#F1C40F",
        "format": "color",
        "title": "Graph Color",
        "type": "string"
      }
    }
  }
}
